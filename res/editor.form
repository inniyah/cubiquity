form particleEditor
{
    theme = res/editor.theme
    autoWidth = true
    autoHeight = true

    container mode
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 0
        size = 160, 220

        label title
        {
            style = title
            size = 140, 30
            text = Mode
        }

        radioButton RotateButton
        {
           style = iconNoBorder
           text = Rotate
           group = mode
           size = 140, 40
           imageSize = 35, 35
           selected = true
        }

        radioButton PaintButton : RotateButton
        {
            text = Paint
            selected = false
        }

        radioButton SmoothButton : PaintButton
        {
            text = Smooth
        }
        
        radioButton AddButton : SmoothButton
        {
            text = Add
        }
        
        radioButton SubtractButton : AddButton
        {
            text = Subtract
        }
    }

    // Camera Zoom
    container zoom
    {
        style = noBorder
        size = 160, 50
        position = 0, 430

        button ZoomInButton
        {
            style = buttonStyle
            size = 80, 50
            text = Zoom In
        }

        button ZoomOutButton : ZoomInButton
        {
            position = 80, 0
            text = Zoom Out
        }
    }

    container tools
    {
        style = particleProps
        alignment = ALIGN_TOP_RIGHT
        width = 210
        autoHeight = true
        layout = LAYOUT_VERTICAL
        scroll = SCROLL_VERTICAL
        scrollBarsAutoHide = false

        // Particle Size
        label titlePainting
        {
            style = title
            size = 150, 30
            text = Material
        }
        
        button Mat0Button
        {
            style = buttonStyle
            size = 160, 50
            text = 0
        }

        button Mat1Button : Mat0Button
        {
            text = 1
        }
        
        button Mat2Button : Mat1Button
        {
            text = 2
        }
        
        button Mat3Button : Mat2Button
        {
            text = 3
        }
        
        label titleBrushSize
        {
            style = title
            size = 150, 30
            text = Brush Size
        }
        
        slider BrushSizeSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 1
            max = 10
            value = 5
            step = 1
            consumeInputEvents = false
        }
        
        label titlePaintIntensity
        {
            style = title
            size = 150, 30
            text = Paint Intensity
        }
        
        slider PaintIntensitySlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 1
            max = 10
            value = 5
            step = 1
            consumeInputEvents = false
        }
        
        label titleSmoothBias
        {
            style = title
            size = 150, 30
            text = Smooth Bias
        }
        
        slider SmoothBiasSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = -0.25
            max = 0.75
            value = 0.25
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleAddSubtractRate
        {
            style = title
            size = 150, 30
            text = Add/Sub Rate
        }
        
        slider AddSubtractRateSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 1
            max = 10
            value = 5
            step = 1
            consumeInputEvents = false
        }
    }
}