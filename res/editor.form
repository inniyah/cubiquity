form particleEditor
{
    theme = res/editor.theme
    autoWidth = true
    autoHeight = true

    container mode
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 0
        size = 160, 250

        label title
        {
            style = title
            size = 140, 30
            text = Mode
        }

        radioButton RotateButton
        {
           style = iconNoBorder
           text = Rotate
           group = mode
           size = 140, 40
           imageSize = 35, 35
           selected = true
        }
        
        radioButton AddButton : RotateButton
        {
            text = Add
            selected = false
        }
        
        radioButton SubtractButton : AddButton
        {
            text = Subtract
        }

        radioButton PaintButton : SubtractButton
        {
            text = Paint            
        }

        radioButton SmoothButton : PaintButton
        {
            text = Smooth
        }        
    }

    // Camera Zoom
    container zoom
    {
        style = basic
        size = 160, 250
        position = 0, 250

        button ZoomInButton
        {
            style = buttonStyle
            size = 70, 50
            text = Zoom In
        }

        button ZoomOutButton : ZoomInButton
        {
            position = 70, 0
            text = Zoom Out
        }
        
        checkBox WireframeCheckBox
        {
            style = iconNoBorder
            size = 140, 40
            position = 0, 60
            imageSize = 35, 35
            text = Wireframe
            checked = false
        }
        
        label titleLod1Start
        {
            style = title
            size = 150, 30
            position = 0, 110
            text = Lod 1 Start
        }
        
        slider Lod1StartSlider
        {
            style = noBorder
            size = 150, 50
            position = 0, 140
            orientation = HORIZONTAL
            min = 50.0
            max = 300.0
            value = 100.0
            step = 1.0
            consumeInputEvents = false
        }
        
        label titleLod2Start
        {
            style = title
            size = 150, 30
            position = 0, 170
            text = Lod 2 Start
        }
        
        slider Lod2StartSlider
        {
            style = noBorder
            size = 150, 50
            position = 0, 200
            orientation = HORIZONTAL
            min = 50.0
            max = 300.0
            value = 100.0
            step = 1.0
            consumeInputEvents = false
        }
    }

    container tools
    {
        style = particleProps
        alignment = ALIGN_TOP_RIGHT
        width = 210
        autoHeight = true
        layout = LAYOUT_VERTICAL
        scroll = SCROLL_VERTICAL
        scrollBarsAutoHide = false

        // Particle Size
        label titlePainting
        {
            style = title
            size = 150, 30
            text = Material
        }
        
        button Mat0Button
        {
            style = buttonStyle
            size = 160, 50
            text = 0
        }

        button Mat1Button : Mat0Button
        {
            text = 1
        }
        
        button Mat2Button : Mat1Button
        {
            text = 2
        }
        
        button Mat3Button : Mat2Button
        {
            text = 3
        }
        
        label titleBrushSize
        {
            style = title
            size = 150, 30
            text = Brush Size
        }
        
        slider BrushSizeSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 1
            max = 10
            value = 5
            step = 1
            consumeInputEvents = false
        }
        
        label titleBrushIntensity
        {
            style = title
            size = 150, 30
            text = Brush Intensity
        }
        
        slider BrushIntensitySlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0.01
            max = 1.0
            value = 0.5
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleSmoothBias
        {
            style = title
            size = 150, 30
            text = Smooth Bias
        }
        
        slider SmoothBiasSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = -0.25
            max = 0.75
            value = 0.25
            step = 0.01
            consumeInputEvents = false
        }
    }
}