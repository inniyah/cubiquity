form particleEditor
{
    theme = res/Forms/editor.theme
    autoWidth = true
    autoHeight = true

    container mode
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 50
        size = 160, 100

        label LodLabel
        {
            style = title
            size = 150, 30
            position = 0, 110
            text = LOD Control
        }
        
        slider LodSlider
        {
            style = noBorder
            size = 150, 50
            position = 0, 140
            orientation = HORIZONTAL
            min = 0.1
            max = 1.0
            value = 0.2
            step = 0.01
            consumeInputEvents = false
        }      
    }

    container tools
    {
        style = particleProps
        alignment = ALIGN_TOP_RIGHT
        width = 210
        height = 500
        layout = LAYOUT_VERTICAL
        scroll = SCROLL_VERTICAL
        scrollBarsAutoHide = false
        
        label titleRed
        {
            style = title
            size = 150, 30
            text = Red
        }
        
        slider RedSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0
            max = 1
            value = 1
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleGreen
        {
            style = title
            size = 150, 30
            text = Green
        }
        
        slider GreenSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0
            max = 1
            value = 0
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleBlue
        {
            style = title
            size = 150, 30
            text = Blue
        }
        
        slider BlueSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0
            max = 1
            value = 0
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleLight
        {
            style = title
            size = 150, 30
            text = Light
        }
        
        slider LightSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
