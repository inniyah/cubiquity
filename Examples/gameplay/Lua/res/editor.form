form particleEditor
{
    theme = res/editor.theme
    autoWidth = true
    autoHeight = true

    container mode
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 0
        size = 160, 100

        label LodLabel
        {
            style = title
            size = 150, 30
            position = 0, 110
            text = LOD Control
        }
        
        slider LodSlider
        {
            style = noBorder
            size = 150, 50
            position = 0, 140
            orientation = HORIZONTAL
            min = 0.1
            max = 2.0
            value = 0.5
            step = 0.01
            consumeInputEvents = false
        }      
    }

    container tools
    {
        style = particleProps
        alignment = ALIGN_TOP_RIGHT
        width = 210
        autoHeight = true
        layout = LAYOUT_VERTICAL
        scroll = SCROLL_VERTICAL
        scrollBarsAutoHide = false
        
        label titleBrushSize
        {
            style = title
            size = 150, 30
            text = Brush Size
        }
        
        slider BrushSizeSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 1
            max = 10
            value = 5
            step = 1
            consumeInputEvents = false
        }
        
        label titleBrushIntensity
        {
            style = title
            size = 150, 30
            text = Brush Intensity
        }
        
        slider BrushIntensitySlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0.01
            max = 1.0
            value = 0.5
            step = 0.01
            consumeInputEvents = false
        }
        
        label titleSmoothBias
        {
            style = title
            size = 150, 30
            text = Smooth Bias
        }
        
        slider SmoothBiasSlider
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = -0.25
            max = 0.75
            value = 0.25
            step = 0.01
            consumeInputEvents = false
        }
    }
}